# Токен Telegram-бота (получить у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Путь к файлу базы данных SQLite
DB_PATH=bot.db

# Путь к PDF с ТН ВЭД (для import_codes.py)
PDF_PATH=ru.84_2022_21.09.2025.pdf

# Фильтр групп ТН ВЭД при импорте (через запятую, без пробелов)
# Пустое значение = импортировать все группы из PDF
# Пример для специализации на двигателях и холодильниках:
# TARGET_GROUPS=8408,8418
TARGET_GROUPS=

# OpenAI API (опционально — нужен для ранжирования кодов через LLM)
# Если не указан, бот работает только на поиске по ключевым словам
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5.2
